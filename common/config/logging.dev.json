{
    "version": 1,
    "formatters": {
        "default": {
            "format": "[%(asctime)s] %(levelname)s | %(module)s >>> %(message)s",
            "datefmt": "%B %d, %Y %H:%M:%S %Z"
        },
        "simple": {
            "format": "%(levelname)s | %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "simple"
        },
        "wsgi": {
            "class": "logging.StreamHandler",
            "formatter": "simple",
            "stream": "ext://flask.logging.wsgi_errors_stream"
        },
        "file": {
            "class": "logging.FileHandler",
            "formatter": "default",
            "filename": "system.log"
        },
        "file_rotate": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "formatter": "default",
            "filename": "system.log",
            "when": "D",
            "interval": 1,
            "backupCount": 30
        },
        "size_rotate": {
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "flask.log",
            "maxBytes": 1000000,
            "backupCount": 5,
            "formatter": "default"
        }
    },
    "root": {
        "level": "INFO",
        "handlers": ["console"]
    }
}